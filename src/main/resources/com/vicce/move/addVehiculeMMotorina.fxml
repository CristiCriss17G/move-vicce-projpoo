<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<GridPane fx:id="gridPane" fx:controller="com.vicce.move.SecondaryController"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="grid-pane">
    <rowConstraints>
        <RowConstraints minHeight="20" vgrow="SOMETIMES" />
        <RowConstraints minHeight="20" vgrow="SOMETIMES" />
        <RowConstraints minHeight="20" vgrow="SOMETIMES" />
        <RowConstraints minHeight="50" vgrow="SOMETIMES" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="30"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="30"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="30"/>
    </columnConstraints>
    <children>
        <Button fx:id="button1" text="Show data" onAction="#showData" GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="center" GridPane.halignment="CENTER"/>
        <Button fx:id="button2" text="Add data" onAction="#addData" GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="center" GridPane.halignment="CENTER"/>
        <Label fx:id="labelStatus" text="" GridPane.rowIndex="2" GridPane.columnIndex="0" alignment="center" GridPane.halignment="CENTER" GridPane.columnSpan="3"/>
        <Label fx:id="label1" text="Numar vehicule" GridPane.rowIndex="3" GridPane.columnIndex="0" alignment="center" GridPane.halignment="CENTER"/>
        <TextField fx:id="textFieldAddVehicule" GridPane.rowIndex="3" GridPane.columnIndex="1" alignment="center" GridPane.halignment="CENTER" GridPane.columnSpan="2"/>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="100" left="20" />
    </padding>
</GridPane>