<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<GridPane fx:id="gridPane" fx:controller="com.vicce.move.PrimaryController"
   xmlns="http://javafx.com/javafx/8.0.171"
   xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="grid-pane">
   <rowConstraints>
      <RowConstraints minHeight="10" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10" vgrow="SOMETIMES" />
      <RowConstraints minHeight="70" vgrow="SOMETIMES" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="30"/>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="30"/>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="30"/>
   </columnConstraints>
   <children>
      <Button fx:id="button1" text="Add data" onAction="#addData" GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="center" GridPane.halignment="CENTER"/>
      <Button fx:id="button2" text="Reset data" onAction="#resetData" GridPane.rowIndex="0" GridPane.columnIndex="2" alignment="center" GridPane.halignment="CENTER"/>
      <Button fx:id="button3" text="Show data" onAction="#showData" GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="center" GridPane.halignment="CENTER"/>
      <TextField fx:id="textField" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="3" minHeight="50" GridPane.halignment="CENTER"/>
   </children>
   <padding>
      <Insets top="10" right="10" bottom="10" left="10" />
   </padding>
</GridPane>